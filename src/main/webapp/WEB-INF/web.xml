<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Random words applications</display-name>

  <servlet>
    <servlet-name>getWord</servlet-name>
    <servlet-class>
      words.getWord
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>getWord</servlet-name>
    <url-pattern>/getWord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>checkWord</servlet-name>
    <servlet-class>
      words.checkWord
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>checkWord</servlet-name>
    <url-pattern>/checkWord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteLearnedWord</servlet-name>
    <servlet-class>
      words.deleteLearnedWord
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>deleteLearnedWord</servlet-name>
    <url-pattern>/deleteLearnedWord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getImageApi</servlet-name>
    <servlet-class>
      words.getImageApi
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>getImageApi</servlet-name>
    <url-pattern>/getImageApi</url-pattern>
  </servlet-mapping>

</web-app>
